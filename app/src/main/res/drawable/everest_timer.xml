<?xml version="1.0" encoding="utf-8"?>
<!-- animation represent timer count up in 2 seconds
     which is time out for each question -->
<animation-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="true">
    <item
        android:duration="250"
        android:drawable="@drawable/timer_0"/>
    <item
        android:duration="250"
        android:drawable="@drawable/timer_1"/>
    <item
        android:duration="250"
        android:drawable="@drawable/timer_2"/>
    <item
        android:duration="250"
        android:drawable="@drawable/timer_3"/>
    <item
        android:duration="250"
        android:drawable="@drawable/timer_4"/>
    <item
        android:duration="250"
        android:drawable="@drawable/timer_5"/>
    <item
        android:duration="250"
        android:drawable="@drawable/timer_6"/>
    <item
        android:duration="250"
        android:drawable="@drawable/timer_7"/>
</animation-list>